																//                                                                 始
																//                                                                 化
																//                                                                 信
																//                                                                 号
																//                                                                         clr
																//                                                                         = 1;
																//                                                                         din
																//                                                                         = 0;
																//                                                                                 #10
																//                                                                                 clr
