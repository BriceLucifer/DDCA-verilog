																//                                                                                                                 din
																//                                                                                                                 = 1;
																//                                                                                                                         #10
																//                                                                                                                         din
																//                                                                                                                         = 1;
																//                                                                                                                                 #10
																//                                                                                                                                 din
																//                                                                                                                                 = 0;
																//                                                                                                                                         #10
