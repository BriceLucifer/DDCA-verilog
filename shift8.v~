																//                                                                                                 din
																//                                                                                                 = 1;
																//                                                                                                 //
																//                                                                                                 输
																//                                                                                                 入
																//                                                                                                 序
																//                                                                                                 列
																//                                                                                                 开
																//                                                                                                 始
																//                                                                                                         #10
																//                                                                                                         din
																//                                                                                                         = 0;
